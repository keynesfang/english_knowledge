/* pages/word/word.wxss */

.go_back {
  position: fixed;
  top: 32px;
  left: 10px;
  z-index: 999;
  font-size: 16px;
}

.note {
  background: #28a745;
  color: #fff;
  display: flex;
  flex-direction: row;
  padding: 10px;
  font-size: 14px;
  box-shadow: 0 -2px 10px #aaa;
}

.info {
  color: #ffc107;
}

.info-text {
  margin-left: 10px;
  display: inline-block;
}

.word_list {
  width: 100%;
  font-size: 14px;
  box-shadow: 0 -2px 10px #aaa;
}

.null {
  width: 100%;
  text-align: center;
}

.null_box {
  width: 100px;
  height: 80px;
  margin: 50px;
}

.word_package {
  box-shadow: 0 -2px 10px #aaa;
  padding: 10px;
}

.word {
  margin-left: 20px;
}

.delete {
  float: right;
  margin-right: 10px;
}
