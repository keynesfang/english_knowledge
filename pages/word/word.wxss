/* pages/word/word.wxss */

.go_back {
  position: fixed;
  top: 35px;
  left: 10px;
  z-index: 999;
  font-size: 16px;
}

.note {
  background: #28a745;
  color: #fff;
  display: flex;
  flex-direction: row;
  padding: 10px;
  font-size: 14px;
  box-shadow: 0 -2px 10px #aaa;
}

.info {
  color: #ffc107;
}

.info-text {
  margin-left: 10px;
  display: inline-block;
}

.word_list {
  width: 100%;
  font-size: 14px;
  box-shadow: 0 -2px 10px #aaa;
  height: 100px;
}

.null {
  width: 100%;
  text-align: center;
}

.null_box {
  width: 100px;
  height: 80px;
  margin: 50px;
}

.word_package {
  box-shadow: 0 -2px 10px #aaa;
  padding: 10px;
}

.word {
  margin-left: 10px;
  font-size: 16px;
}

.delete {
  float: right;
  margin-right: 10px;
}

.clear {
  position: fixed;
  bottom: 20px; 
  right:50px;
  width: 50px;
  height: 50px;
  color: red;
  text-align: center;
  line-height: 50px;
  border-radius: 50px;
  box-shadow: 0 -2px 10px red;
}

.detail_icon {
  position: fixed;
  right:20px;
  width: 50px;
  height: 50px;
  text-align: center;
  line-height: 50px;
  border-radius: 50px;
}

.reply {
  bottom: 230px; 
  color: blue;
  box-shadow: 0 -2px 10px blue;
}

.source {
  bottom: 160px; 
  color: green;
  box-shadow: 0 -2px 10px green;
  font-size: 14px;
}

.up {
  bottom: 90px; 
  color: #007bff;
  box-shadow: 0 -2px 10px #007bff;
}

.down {
  bottom: 20px; 
  color: #007bff;
  box-shadow: 0 -2px 10px #007bff;
}

.up.active {
  color: #6c757d;
  box-shadow: 0 -2px 10px #6c757d;
}

.down.active {
  color: #6c757d;
  box-shadow: 0 -2px 10px #6c757d;
}

.sound_icon {
  margin-left: 8px;
}

.word_title {
  box-sizing: border-box;
  width: 100vw;
  padding: 20px;
  text-align: left;
}

.big_title {
  font-size: 25px;
}

.word_text {
  color: #007bff;
}

.sound_mark {
  font-size: 15px;
}

.word_explain {
  margin-top: 5px;
  margin-left: 5px;
}

.explains {
  padding: 0 20px 20px 25px;
  font-size: 14px;
}

.detail {
  line-height: 25px;
}

.abc {
  color: #28a745;
}

.web {
  margin-top: 20px;
}

.clear_confirm {
  font-size: 16px;
  width: 80vw;
  height: 150px;
  position: fixed;
  top: 35vh;
  left: 10vw;
  color: #fff;
  background-color: #000;
  border-radius: 5px;
  background: rgba(0, 0, 0, 0.7);
}

.clear_tip {
  text-align: center;
  width: 100%;
  height: 100px;
  line-height: 100px;
}

.clear_btn {
  box-sizing: border-box;
  width: 50%;
  line-height: 50px;
  height: 50px;
  display: inline-block;
  text-align: center;
  border-top: 1px solid #fff;
}

.clear_btn_left {
  border-right: 1px solid #fff;
}