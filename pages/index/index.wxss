/**index.wxss**/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.setting {
  position: fixed;
  top: 28px;
  left: 42px;
  font-size: 14px;
  font-weight: bold;
  color: #007bff;
  z-index: 999;
  line-height: 35px;
}

.nav {
  box-sizing: border-box;
  font-size: 14px;
  box-shadow: 0 -2px 10px #aaa;
  width: 100%;
  height: 30px;
  background-color: #fff;
  line-height: 28px;
  padding: 0 10px;
  overflow: hidden;
  white-space: nowrap;
}

.nav-item {
  display: inline-block;
  text-align: center;
  color: #aaa;
  width: 20%;
}

.nav-item.active {
  color: #000;
  border-bottom: 2px solid #000;
}

.tab-box {
  padding: 0;
  box-sizing: border-box;
}

.tab-content {
  overflow-y: scroll;
}

.video_item {
  width: 100%;
  text-align: center;
  position: relative;
}

.shade {
  position: absolute;
  top: 0;
  left: 2%;
  width: 96%;
  height: 220px;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 5px;
  margin-top: 10px;
}

.video_poster {
  margin-top: 10px;
  border-radius: 5px;
  height: 220px;
  width: 96%;
}

.video_title {
  position: absolute;
  top: 20px;
  left: 20px;
  color: #fff;
  font-weight: bold;
  letter-spacing: 1px;
  font-size: 16px;
}

.eng {
  top: 45px;
  font-size: 14px;
}

.video_play_icon {
  position: absolute;
  right: 20px;
  bottom: 20px;
  color: #fff;
}

.video_time {
  position: absolute;
  left: 20px;
  bottom: 20px;
  color: #fff;
  font-size: 14px;
}
