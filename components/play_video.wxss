/* pages/components/play_video.wxss */
.video_wrapper {
  background-color: #000;
  width: 750rpx;
}

video {
  width: 750rpx;
}

.control_bar {
  border-bottom: 1px solid silver;
  height: 30px;
  position: relative;
}

.video_control {
  position: absolute;
  left: 0;
  top: -3px;
  width: 35px;
  height: 35px;
}

.view_model {
  position: absolute;
  top: 4px;
  right: 10px;
  color: #fff;
  font-size: 14px;
  border-radius: 5px;
}

.subtitle_wrapper {
  box-sizing: border-box;
  padding: 5px 10px;
  font-size: 14px;
}